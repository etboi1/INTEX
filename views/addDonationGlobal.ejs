<!-- This page is for managers to add donations to the global donations page (showing all donations from anyone) -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Donation</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <a href="/viewAllDonations" class="back-btn">← Back to Donations</a>

    <div class="container">
        <h1>Add Donation</h1>

        <!-- Check if there is an error message -->
        <% if (error_message) { %>
        <div class="error-box"><%= error_message %></div>
        <% } %>

        <!-- POST form -->
        <form action="/addDonationGlobal" method="POST">

            <div class="form-group">
                <label>Select Participant</label>
                <select name="part_id" required>
                    <option value="">Select Participant</option>
                    <!-- Dropdown list of all participants in the database to select from -->
                    <% parts.forEach(p => { %>
                        <option value="<%= p.part_id %>">
                            <%= p.part_first_name %> <%= p.part_last_name %> — <%= p.part_email %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label>Donation Date</label>
                <input type="date" name="donation_date" required>
            </div>

            <div class="form-group">
                <!-- Currency style with the step -->
                <label>Donation Amount</label>
                <input type="number" step="0.01" name="donation_amount" required>
            </div>

            <button type="submit" class="submit-btn">Add Donation</button>
        </form>
    </div>

</body>
</html>
