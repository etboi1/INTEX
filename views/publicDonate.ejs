<!-- This page is where users can donate. If they are not yet a participant a record will be made -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Public Donation</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">
</head>

<body>

    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
        </div>
    </div>

    <div class="container">
        <h1>Make a Donation</h1>

        <!-- Easy button to go back -->
        <a href="/donationImpact" class="back-btn">‚Üê Back to Impact Page</a>

        <!-- Error Message -->
        <% if (error_message) { %>
            <div class="error-box"><%= error_message %></div>
        <% } %>

        <!-- Success Message -->
        <% if (success_message) { %>
            <div class="success-box"><%= success_message %></div>
        <% } %>

        <form action="/publicDonate" method="POST">

            <h2>Participant Information</h2>

            <!-- Make sure we have at elast email, first name, last name, and donation info so we can check everything -->
            <label>Email *</label>
            <input type="email" name="part_email" required>


            <div class="grid-2">
                <div>
                    <br>
                    <label>First Name *</label>
                    <input type="text" name="part_first_name" required>
                </div>
                <div>
                    <br>
                    <label>Last Name *</label>
                    <input type="text" name="part_last_name" required>
                </div>
            </div>

            <br>
            <label>Date of Birth</label>
            <input type="date" name="part_dob" required>

            <br><br>
            <label>Phone</label>
            <input type="text" name="part_phone" required>

            <div class="grid-3">
                <div>
                    <br>
                    <label>City</label>
                    <input type="text" name="part_city" required>
                </div>
                <div>
                    <br>
                    <!-- 50 states dropdown -->
                    <label>State</label>
                    <select name="part_state" required>
                        <option value="">Select State</option>
                        <option value="AL">AL</option>
                        <option value="AK">AK</option>
                        <option value="AZ">AZ</option>
                        <option value="AR">AR</option>
                        <option value="CA">CA</option>
                        <option value="CO">CO</option>
                        <option value="CT">CT</option>
                        <option value="DE">DE</option>
                        <option value="FL">FL</option>
                        <option value="GA">GA</option>
                        <option value="HI">HI</option>
                        <option value="ID">ID</option>
                        <option value="IL">IL</option>
                        <option value="IN">IN</option>
                        <option value="IA">IA</option>
                        <option value="KS">KS</option>
                        <option value="KY">KY</option>
                        <option value="LA">LA</option>
                        <option value="ME">ME</option>
                        <option value="MD">MD</option>
                        <option value="MA">MA</option>
                        <option value="MI">MI</option>
                        <option value="MN">MN</option>
                        <option value="MS">MS</option>
                        <option value="MO">MO</option>
                        <option value="MT">MT</option>
                        <option value="NE">NE</option>
                        <option value="NV">NV</option>
                        <option value="NH">NH</option>
                        <option value="NJ">NJ</option>
                        <option value="NM">NM</option>
                        <option value="NY">NY</option>
                        <option value="NC">NC</option>
                        <option value="ND">ND</option>
                        <option value="OH">OH</option>
                        <option value="OK">OK</option>
                        <option value="OR">OR</option>
                        <option value="PA">PA</option>
                        <option value="RI">RI</option>
                        <option value="SC">SC</option>
                        <option value="SD">SD</option>
                        <option value="TN">TN</option>
                        <option value="TX">TX</option>
                        <option value="UT">UT</option>
                        <option value="VT">VT</option>
                        <option value="VA">VA</option>
                        <option value="WA">WA</option>
                        <option value="WV">WV</option>
                        <option value="WI">WI</option>
                        <option value="WY">WY</option>
                    </select>
                </div>

                <div>
                    <br>
                    <label>Zip Code</label>
                    <input type="text" name="part_zip" required>
                </div>
            </div>

            <br>
            <label>School or Employer</label>
            <input type="text" name="part_school_or_employer" required>


            <h2>Donation Information</h2>

            <br>
            <label>Donation Amount</label>
            <input type="number" step="0.01" name="donation_amount" required>

            <br><br>
            <label>Donation Date</label>
            <input type="date" name="donation_date" required>


            <button type="submit" class="submit-btn">Submit Donation</button>

        </form>
    </div>

</body>
</html>
