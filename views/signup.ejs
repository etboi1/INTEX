<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ella Rises — Create Account</title>

    <!-- Brand Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
    />

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background: #F9F5EA; /* brand cream */
            overflow-x: hidden;
        }

        /* Decorative background blobs in BRAND colors */
        .blob1, .blob2 {
            position: absolute;
            border-radius: 50%;
            filter: blur(65px);
            opacity: 0.45;
            z-index: -1;
        }

        .blob1 {
            width: 360px;
            height: 360px;
            background: #FFD8D1; /* blush */
            top: -90px;
            left: -70px;
        }

        .blob2 {
            width: 420px;
            height: 420px;
            background: #F9AFB1; /* pink */
            bottom: -140px;
            right: -80px;
        }

        /* Login Card */
        .login-card {
            background: #ffffff;
            border-radius: 18px;
            padding: 40px 35px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
            border: 2px solid #9AB59D; /* sage accent */
        }

        /* Main Brand Title */
        .site-title {
            font-family: 'DM Serif Display', serif;
            font-size: 2.3rem;
            color: #3A3F3B; /* charcoal */
            margin-bottom: 4px;
        }

        /* Divider under title */
        .login-divider {
            font-family: 'DM Serif Display', serif;
            font-size: 1.2rem;
            color: #CE325B; /* brand deep pink */
            margin-top: -6px;
            margin-bottom: 22px;
            letter-spacing: 0.6px;
        }

        .login-divider em {
            font-style: italic;
            opacity: 0.9;
        }

        /* Button styling in brand pink */
        .btn-main {
            background: #F9AFB1;
            color: #3A3F3B;
            border: none;
            padding: 12px 0;
            border-radius: 10px;
            font-size: 1.05rem;
            font-weight: 600;
            transition: 0.2s;
        }

        .btn-main:hover {
            background: #F4B092; /* peachy accent from palette */
        }

        /* Logo */
        .logo {
            display: block;
            margin: 0 auto 12px auto;
            max-width: 120px;
        }

        /* Links */
        a {
            color: #CE325B; /* deep pink */
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- decorative soft shapes -->
    <div class="blob1"></div>
    <div class="blob2"></div>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">

        <div class="login-card" style="width: 100%; max-width: 420px;">

            <!-- LOGO SLOT -->
            <img src="/images/logos/EllaRisesLogo.PNG" alt="Ella Rises Logo" class="logo" />

            <h1 class="text-center site-title">Ella Rises</h1>

            <p class="text-center login-divider">
                — <em>Create Account</em> —
            </p>

            <!-- Error Message -->
            <% if (typeof error_message !== "undefined" && error_message) { %>
                <div class="alert alert-danger text-center py-2" style="
                    border-radius: 10px;
                    font-size: 0.9rem;
                    background: #F9AFB1; 
                    color: #3A3F3B; 
                    border: 2px solid #CE325B;
                    font-weight: 600;
                ">
                    <%= error_message %>
                </div>
            <% } %>

            <form action="/addSignUp" method="POST">

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control form-control-lg"
                        required
                    >
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control form-control-lg"
                        required
                    >
                </div>

                <input type="hidden" name="level" value="u">

                <button type="submit" class="btn btn-main w-100">
                    Sign Up
                </button>

                <p class="text-center mt-3 mb-0">
                    <a href="/">← Back to Home</a>
                </p>
                <p class="text-center mt-3 mb-0">
                    <a href="/login">← Back to Login</a>
                </p>

            </form>

        </div>
    </div>

</body>
</html>