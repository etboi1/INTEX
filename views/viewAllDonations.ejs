<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Donations</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/viewStyles.css">
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <div style="padding-top: 20px;">
        <form method="GET" action="/searchAllDonations" style="text-align:center; margin-bottom:20px;">
            <input 
                type="text" 
                name="search"
                placeholder="Search by email or donation date..."
                style="padding:10px; width:60%; border:2px solid #FFD8D1; border-radius:10px;"
            />
            <button 
                type="submit"
                style="padding:10px 20px; border-radius:10px; border:2px solid #FFC4BA; background:#FFD8D1; font-weight:600;">
                Search
            </button>
        </form>
    </div>

    <% if (error_message) { %>
        <div class="error-box"><%= error_message %></div>
    <% } %>

    <div class="add-btn-container">
        <% if (level === "m") { %>
        <a href="/addDonationGlobal" class="add-btn">Add Donation</a>
        <% } %>
        <a href="/viewAllDonations" class="add-btn">View All</a>
    </div>

    <div class="container">
        <h1>All Donations</h1>

        <% if (donations && donations.length > 0) { %>
            <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>First</th>
                        <th>Last</th>
                        <th>Donation #</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Total</th>
                        <% if (level === "m") { %>
                        <th>Edit</th>
                        <th>Delete</th>
                        <% } %>
                    </tr>
                </thead>

                <tbody>
                    <% donations.forEach(d => { %>
                        <tr>
                            <td><%= d.part_email %></td>
                            <td><%= d.part_first_name %></td>
                            <td><%= d.part_last_name %></td>
                            <td><%= d.donation_number %></td>
                            <td>
                                <% if (d.donation_date) { %>
                                    <%= d.donation_date.toISOString().split("T")[0] %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td>$<%= d.donation_amount %></td>
                            <td>$<%= d.total_donations %></td>

                            <% if (level === "m") { %>
                            <td>
                                <form action="/editDonationGlobal/<%= d.part_id %>/<%= d.donation_number %>" method="get">
                                    <input class="action-btn" type="submit" value="Edit" />
                                </form>
                            </td>

                            <td>
                                <form action="/deleteDonationGlobal/<%= d.part_id %>/<%= d.donation_number %>" method="post">
                                    <input class="action-btn" type="submit" value="Delete" />
                                </form>
                            </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            </div>
        <% } else { %>
            <div class="empty">No donations found.</div>
        <% } %>
    </div>

</body>
</html>
