<!-- A page with a form for managers to add a participant to the database -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Participant</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">

</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <a href="/viewPart" class="back-btn">‚Üê Back to Participant View</a>

    <div class="container">
        <h1>Add Participant</h1>

        <!-- Check for error message -->
        <% if (error_message) { %>
        <div class="error-box">
            <%= error_message %>
        </div>
        <% } %>

        <form action="/addPart" method="POST">

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="part_email" required>
            </div>

            <div class="form-group">
                <label>First Name</label>
                <input type="text" name="part_first_name" required>
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="part_last_name" required>
            </div>

            <div class="form-group">
                <label>Birth Date</label>
                <input type="date" name="part_dob">
            </div>

            <div class="form-group">
                <label>Role</label>
                <select name="part_role" required>
                    <option value="p">Participant</option>
                    <option value="a">Admin</option>
                </select>
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <input type="number" name="part_phone">
            </div>

            <div class="form-group">
                <label>City</label>
                <input type="text" name="part_city">
            </div>

            <!-- State will be in shorted form -->
            <div>
                <br>
                <label>State</label>
                <select name="part_state" required>
                    <option value="">Select State</option>
                    <option value="AL">AL</option>
                    <option value="AK">AK</option>
                    <option value="AZ">AZ</option>
                    <option value="AR">AR</option>
                    <option value="CA">CA</option>
                    <option value="CO">CO</option>
                    <option value="CT">CT</option>
                    <option value="DE">DE</option>
                    <option value="FL">FL</option>
                    <option value="GA">GA</option>
                    <option value="HI">HI</option>
                    <option value="ID">ID</option>
                    <option value="IL">IL</option>
                    <option value="IN">IN</option>
                    <option value="IA">IA</option>
                    <option value="KS">KS</option>
                    <option value="KY">KY</option>
                    <option value="LA">LA</option>
                    <option value="ME">ME</option>
                    <option value="MD">MD</option>
                    <option value="MA">MA</option>
                    <option value="MI">MI</option>
                    <option value="MN">MN</option>
                    <option value="MS">MS</option>
                    <option value="MO">MO</option>
                    <option value="MT">MT</option>
                    <option value="NE">NE</option>
                    <option value="NV">NV</option>
                    <option value="NH">NH</option>
                    <option value="NJ">NJ</option>
                    <option value="NM">NM</option>
                    <option value="NY">NY</option>
                    <option value="NC">NC</option>
                    <option value="ND">ND</option>
                    <option value="OH">OH</option>
                    <option value="OK">OK</option>
                    <option value="OR">OR</option>
                    <option value="PA">PA</option>
                    <option value="RI">RI</option>
                    <option value="SC">SC</option>
                    <option value="SD">SD</option>
                    <option value="TN">TN</option>
                    <option value="TX">TX</option>
                    <option value="UT">UT</option>
                    <option value="VT">VT</option>
                    <option value="VA">VA</option>
                    <option value="WA">WA</option>
                    <option value="WV">WV</option>
                    <option value="WI">WI</option>
                    <option value="WY">WY</option>
                </select>
            </div>


            <div class="form-group">
                <label>Zip</label>
                <input type="number" name="part_zip">
            </div>

            <div class="form-group">
                <label>School or Employer</label>
                <input type="text" name="part_school_or_employer">
            </div>

            <button type="submit" class="submit-btn">Add Participant</button>
        </form>
    </div>

</body>
</html>