<!-- This page has a form for managers to add a new user to the page tied to login -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add User</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">

</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <a href="/viewUsers" class="back-btn">‚Üê Back to Users View</a>

    <div class="container">
        <h1>Add User</h1>

        <!-- Checking for error message -->
        <% if (error_message) { %>
        <div class="error-box">
            <%= error_message %>
        </div>
        <% } %>

        <!-- post route tied to user db -->
        <form action="/addUser" method="POST">

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="text" name="password" required>
            </div>

            <!-- Select one -->
            <div class="form-group">
                <label>Level</label>
                <select name="level" required>
                    <option value="u">User</option>
                    <option value="m">Manager</option>
                </select>
            </div>

            <button type="submit" class="submit-btn">Add User</button>
        </form>
    </div>

</body>
</html>