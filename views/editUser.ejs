<!-- This page allows managers to edit records in the users table that are linked to login -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">

</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <a href="/viewUsers" class="back-btn">‚Üê Back to Users View</a>

    <div class="container">
        <h1>Edit User</h1>

        <!-- Check for error message -->
        <% if (error_message) { %>
            <div class="error-box"><%= error_message %></div>
        <% } %>

        <form action="/editUser/<%= user.user_id %>" method="POST">

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" value="<%= user.email %>" required>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="text" name="password" value="<%= user.password %>" required>
            </div>

            <!-- Selection -->
            <div class="form-group">
                <label>Level</label>
                <select name="level">
                    <option value="u" <%= user.level === "u" ? "selected" : "" %>>User</option>
                    <option value="m" <%= user.level === "m" ? "selected" : "" %>>Manager</option>
                </select>
            </div>

            <button type="submit" class="submit-btn">Save Changes</button>
        </form>
    </div>

</body>
</html>