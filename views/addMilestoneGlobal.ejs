<!-- This page includes a form for managers to add milestones to the GLOBAL milestone table that is shown -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Milestone</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <!-- back button -->
    <a href="/viewAllMilestones" class="back-btn">‚Üê Back to Milestones</a>

    <div class="container">
        <h1>Add Milestone</h1>

        <!-- Checking for error message -->
        <% if (error_message) { %>
        <div class="error-box"><%= error_message %></div>
        <% } %>

        <form action="/addMilestoneGlobal" method="POST">

            <!-- Select participant -->
            <div class="form-group">
                <label>Participant</label>
                <select name="part_id" required>
                    <option value="">Select Participant</option>
                    <!-- A dropdown of all participants to select from -->
                    <% parts.forEach(p => { %>
                        <option value="<%= p.part_id %>">
                            <%= p.part_first_name %> <%= p.part_last_name %> - <%= p.part_email %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label>Milestone Title</label>
                <input type="text" name="milestone_title" required>
            </div>

            <div class="form-group">
                <label>Milestone Date</label>
                <input type="date" name="milestone_date" required>
            </div>

            <button type="submit" class="submit-btn">Add Milestone</button>
        </form>
    </div>

</body>
</html>
