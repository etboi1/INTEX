<!-- This page allows users to edit milestones linked to a specific participant -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Milestone</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <a href="/" class="brand">Ella Rises</a>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <!-- Go back to the table of milestones for the particular participant -->
    <a href="/milestones/<%= participantId %>" class="back-btn">‚Üê Back to Milestones</a>

    <div class="container">
        <h1>Edit Milestone</h1>

        <!-- Check for error message -->
        <% if (error_message) { %>
            <div class="error-box"><%= error_message %></div>
        <% } %>

        <!-- Submit the edit that is linked to the specific participant -->
        <form action="/milestones/<%= participantId %>/edit/<%= milestone.milestone_number %>" method="POST">

            <div class="form-group">
                <label>Milestone Title</label>
                <input type="text" name="milestone_title" value="<%= milestone.milestone_title %>" required>
            </div>

            <div class="form-group">
                <label>Milestone Date</label>
                <!-- Format to autofill properly -->
                <input type="date" name="milestone_date" 
                    value="<%= milestone.milestone_date.toISOString().split('T')[0] %>" 
                    required>
            </div>

            <button type="submit" class="submit-btn">Save Changes</button>
        </form>
    </div>

</body>
</html>
