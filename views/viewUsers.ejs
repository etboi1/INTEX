<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/viewStyles.css">

</head>
<body>

<!-- NAVBAR -->
<div class="navbar">
    <div class="brand">Ella Rises</div>
    <div>
        <a href="/">Home</a>
        <a href="/logout">Log Out</a>
    </div>
</div>

<div style="padding-top: 20px;">
<form method="GET" action="/searchUser" style="text-align:center; margin-bottom:20px;">
    <input type="text" name="emailSearch" placeholder="Search by email..." style="padding:10px; width:60%; border:2px solid #FFD8D1; border-radius:10px;"/>
    <button 
        type="submit" 
        style="padding:10px 20px; border-radius:10px; border:2px solid #FFC4BA; background:#FFD8D1; font-weight:600;">
        Search
    </button>
</form>
</div>

<% if (error_message && error_message !== "") { %>
    <div class="error-box">
        <%= error_message %>
    </div>
<% } %>

<div class="add-btn-container">
    <a href="/addUser" class="add-btn">Add User</a>
    <a href="/viewUsers" class="add-btn">View All</a>
</div>

<div class="container">
    <h1>All Users</h1>

    <% if (users && users.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Level</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.email %></td>
                        <td><%= user.password %></td>
                        <td><%= user.level === "m" ? "Manager" : "User" %></td>

                        <td>
                            <form action="/editUser/<%= user.user_id %>" method="get">
                                <input class="action-btn" type="submit" value="Edit" />
                            </form>
                        </td>

                        <td>
                            <form action="/deleteUser/<%= user.user_id %>" method="post">
                                <input class="action-btn" type="submit" value="Delete" />
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } else { %>
        <div class="empty">No users found.</div>
    <% } %>
</div>

</body>
</html>