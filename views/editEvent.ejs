<!-- This page allows users to edit events in the DB -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/addStyles.css">
</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <a href="/" class="brand">Ella Rises</a>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <!--  Back button -->
    <a href="/viewEvents" class="back-btn">‚Üê Back to Events</a>

    <div class="container">
        <h1>Edit Event</h1>

        <!-- Check for error message -->
        <% if (error_message) { %>
            <div class="error-box"><%= error_message %></div>
        <% } %>

        <!-- Submit button for the edit -->
        <form action="/editEvent/<%= event.event_occurrence_id %>" method="POST">

            <div class="form-section">
                <div class="section-header">
                    <!-- Add template to the event templates table -->
                    <button class="mini-btn" onclick="window.location='/addEventTemplate'; return false;">+ Add Template</button>
                </div>

                <div class="form-group">
                    <label>Event Template</label>
                    <select name="event_id">
                        <!-- Dropdown of event templates to choose from -->
                        <% templates.forEach(t => { %>
                            <option value="<%= t.event_id %>"
                                <%= t.event_id === event.event_id ? "selected" : "" %> >
                                <%= t.event_name %> (<%= t.event_type %>)
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <!-- All dates are formatted to autofill properly -->
            <div class="form-group">
                <label>Start Date & Time</label>
                <input type="datetime-local" 
                    name="event_start_date_time" 
                    value="<%= event.event_start_date_time.toISOString().slice(0,16) %>"
                    required>
            </div>

            <div class="form-group">
                <label>End Date & Time</label>
                <input type="datetime-local" 
                    name="event_end_date_time" 
                    value="<%= event.event_end_date_time.toISOString().slice(0,16) %>"
                    required>
            </div>

            <div class="form-section">
                <div class="section-header">
                    <!-- Button to add location to the correct table -->
                    <button class="mini-btn" onclick="window.location='/addLocation'; return false;">+ Add Location</button>
                </div>

                <div class="form-group">
                    <label>Location</label>
                    <select name="location_id">
                        <!-- Dropdown for all locations in the locations table -->
                        <% locations.forEach(l => { %>
                            <option value="<%= l.location_id %>"
                                <%= l.location_id === event.location_id ? "selected" : "" %> >
                                <%= l.location_name %> (capacity: <%= l.location_capacity %>)
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label>Registration Deadline</label>
                <input type="datetime-local" 
                    name="event_registration_deadline" 
                    value="<%= event.event_registration_deadline.toISOString().slice(0,16) %>"
                    required>
            </div>

            <button type="submit" class="submit-btn">Save Changes</button>
        </form>
    </div>

</body>
</html>
