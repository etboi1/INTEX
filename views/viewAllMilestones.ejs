<!-- This page allows anyone to view the full list of milestones in the DB. Managers can manipulate -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Milestones</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/viewStyles.css">
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <!-- Search bar -->
    <div style="padding-top: 20px;">
        <form method="GET" action="/searchAllMilestones" style="text-align:center; margin-bottom:20px;">
            <input 
                type="text" 
                name="search" 
                placeholder="Search by email or milestone title..." 
                style="padding:10px; width:60%; border:2px solid #FFD8D1; border-radius:10px;" 
            />
            <button 
                type="submit" 
                style="padding:10px 20px; border-radius:10px; border:2px solid #FFC4BA; background:#FFD8D1; font-weight:600;">
                Search
            </button>
        </form>
    </div>

    <!-- error message -->
    <% if (error_message) { %>
        <div class="error-box">
            <%= error_message %>
        </div>
    <% } %>

    <!-- Add button for managers only -->
    <div class="add-btn-container">
        <% if (level === "m") { %>
        <a href="/addMilestoneGlobal" class="add-btn">Add Milestone</a>
        <% } %>
        <a href="/viewAllMilestones" class="add-btn">View All</a>
    </div>

    <div class="container">
        <h1>All Milestones</h1>

        <!-- Make sure there are milestones in the DB -->
        <% if (milestones && milestones.length > 0) { %>
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <% if (level === "m") { %>
                            <th>Email</th>
                            <% } %>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Milestone</th>
                            <th>Date</th>
                            <!-- Edit and delete headers only shown for managers -->
                            <% if (level === "m") { %>
                            <th>Edit</th>
                            <th>Delete</th>
                            <% } %>
                        </tr>
                    </thead>

                    <tbody>
                        <!-- For each milestone in the DB show the data -->
                        <% milestones.forEach(m => { %>
                            <tr>
                                <% if (level === "m") { %>
                                <td><%= m.part_email %></td>
                                <% } %>
                                <td><%= m.part_first_name %></td>
                                <td><%= m.part_last_name %></td>
                                <td><%= m.milestone_title %></td>
                                <td><%= m.milestone_date.toISOString().split("T")[0] %></td>

                                <!-- Edit and Delete buttons only for managers -->
                                <% if (level === "m") { %>
                                <td>
                                    <form action="/editMilestoneGlobal/<%= m.part_id %>/<%= m.milestone_number %>" method="get">
                                        <input class="action-btn" type="submit" value="Edit" />
                                    </form>
                                </td>

                                <td>
                                    <form action="/deleteMilestoneGlobal/<%= m.part_id %>/<%= m.milestone_number %>" method="post">
                                        <input class="action-btn" type="submit" value="Delete" />
                                    </form>
                                </td>
                                <% } %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <!-- if table is empty -->
        <% } else { %>
            <div class="empty">No milestones found.</div>
        <% } %>
    </div>

</body>
</html>