<!-- This page allows Anyone to view events that are going on. Managers can manipulate -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Events</title>

    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/viewStyles.css">
</head>
<body>

    <!-- NAVBAR -->
    <div class="navbar">
        <div class="brand">Ella Rises</div>
        <div>
            <a href="/">Home</a>
            <a href="/logout">Log Out</a>
        </div>
    </div>

    <div style="padding-top: 20px;">
    <form method="GET" action="/searchEvent" style="text-align:center; margin-bottom:20px;">
        <input type="text" name="eventName" placeholder="Search by event name..." 
            style="padding:10px; width:60%; border:2px solid #FFD8D1; border-radius:10px;" />
        <button type="submit"
                style="padding:10px 20px; border-radius:10px; border:2px solid #FFC4BA; background:#FFD8D1; font-weight:600;">
            Search
        </button>
    </form>
    </div>

    <!-- Check for error message -->
    <% if (error_message && error_message !== "") { %>
        <div class="error-box">
            <%= error_message %>
            <br><br>
            <a href="/viewEvents" class="add-btn">Refresh</a>
        </div>
    <% } %>

    <!-- Add button only for managers -->
    <div class="add-btn-container">
        <% if (level === "m") { %>
        <a href="/addEvent" class="add-btn">Add Event</a>
        <% } %>
        <a href="/viewEvents" class="add-btn">View All</a>
    </div>

    <div class="container">
        <h1>All Events</h1>

        <!-- Make sure there are events in table -->
        <% if (events && events.length > 0) { %>
            <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Recurrence</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Location</th>
                        <th>Capacity</th>
                        <th>Registration Deadline</th>
                        <!-- Edit and delete headers for managers only -->
                        <% if (level === "m") { %>
                            <th>Edit</th>
                            <th>Delete</th>
                        <% } %>
                    </tr>
                </thead>

                <tbody>
                    <!-- For each event display its data -->
                    <% events.forEach(ev => { %>
                        <tr>
                            <td><%= ev.event_name %></td>
                            <td><%= ev.event_type %></td>
                            <td><%= ev.event_description %></td>
                            <td><%= ev.event_recurrence %></td>
                            <td><%= ev.event_start_date_time.toLocaleString() %></td>
                            <td><%= ev.event_end_date_time.toLocaleString() %></td>
                            <td><%= ev.location_name %></td>
                            <td><%= ev.location_capacity %></td>
                            <td><%= ev.event_registration_deadline.toLocaleString() %></td>

                            <!-- Edit and delete buttons for managers only -->
                            <% if (level === "m") { %>
                            <td>
                                <form action="/editEvent/<%= ev.event_occurrence_id %>" method="get">
                                    <input class="action-btn" type="submit" value="Edit" />
                                </form>
                            </td>

                            <td>
                                <form action="/deleteEvent/<%= ev.event_occurrence_id %>" method="post">
                                    <input class="action-btn" type="submit" value="Delete" />
                                </form>
                            </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            </div>

        <!-- If there is no data in table -->
        <% } else { %>
            <div class="empty">No events found.</div>
        <% } %>
    </div>

</body>
</html>
